{
    "name": "codepotatoltd/cashcalc-sdk",
    "description": "Unofficial PHP SDK for Cashcalc",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Codepotato\\CashCalc\\": "src/",
            "Codepotato\\CashCalc\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sam Carr√©",
            "email": "29132017+Sammyjo20@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "^1.3",
        "spatie/data-transfer-object": "^3.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.33"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
